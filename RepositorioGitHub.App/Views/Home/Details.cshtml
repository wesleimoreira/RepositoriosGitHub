@model RepositorioGitHub.Dominio.GitHubRepositoryViewModel

<div class="row h-100">
    <div class="col-md-12 justify-content-center d-flex align-items-center">
        <div class="card">
            <h5 class="card-header"> <b class="text-uppercase">  Mais Detalhes: </b> @Model.Url </h5>
            <div class="card-body">
                <table class="table table-striped table-borderless table-hover">  
                    <caption>
                        <img src="https://e3ba6e8732e83984.cdn.gocache.net/uploads/image/file/1356860/regular_785896d95be9eef88132b387390ed8ce.png" class="img-rounded" alt="@ViewBag.Title" width="50" />
                    </caption>
                    <thead class="table-dark text-uppercase">
                        <tr>
                            <th> #</th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Linguagem</th>
                            <th>Ultima Atualização</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="@Model.Owner.AvatarUrl" alt="@Model.FullName" class="img-rounded" width="36" />
                            </td>
                            <td>@Model.Name</td>
                            <td>@Model.Description</td>
                            <td>@Model.Language</td>
                            <td>@Model.UpdatedAt</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>
                                <a href="/" class="btn btn-secondary"> Voltar </a>
                            </td>
                        </tr>                       
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>